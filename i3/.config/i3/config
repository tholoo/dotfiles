# Switch language layout with alt+shift
# exec setxkbmap -layout us,ir
# exec setxkbmap -option 'grp:alt_shift_toggle'
exec_always "setxkbmap -model pc104 -layout us,ir -variant ,, -option grp:alt_shift_toggle"

# Disable caps lock switch
exec xmodmap -e "clear lock"
# Set caps_lock as escape
exec xmodmap -e "keysym Caps_Lock = Escape"
exec_always "setxkbmap -option caps:escape"

exec_always feh --bg-fill $wallpaper

